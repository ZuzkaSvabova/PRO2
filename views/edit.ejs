<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header") %>
  <body>
    <%- include("./partials/navbar") %>

    <h1>Edit post</h1>

    <form action="/comments/<%=comment.id%>?_method=PATCH" method="post">
      <section>
        <label for="label">Label:</label>
        <select id="labels" name="comment[labels]" multiple>
          <% labels.forEach(function(label) { %>
            <option value="<%= label %>" <%= selectedLabels && selectedLabels.label.includes(label) ? 'selected' : '' %>><%= label %></option>
          <% }); %>
      </select>
      </section>
      <section>
        <label for="title">Title:</label>
        <input
          type="text"
          name="comment[title]"
          id="title"
          placeholder="title"
          value="<%=comment.title%>"
        />
      </section>
      <section>
        <label for="text">Post:</label>
        <textarea name="comment[text]" id="text" cols="30" rows="3">
<%=comment.text%></textarea
        >
      </section>
      <button>Save post</button>
    </form>

    <!-- <a href="/comments">Back to index</a>  -->
    <%- include("./partials/footer") %>
  </body>

</html>
